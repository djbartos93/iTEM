<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Location</th>
      <th>Description</th>
      <th>Due by</th>
      <th>Created</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_id %></td>
        <td><%= job.location %></td>
        <td><%= job.description %></td>
        <td><%= job.due_by %></td>
        <td><%= job.created %></td>
        <td><%= job.priority %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>


<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>part number</th>
      <th>Part Description</th>
      <th>Quantity used</th>
      <th>closet?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
      <td><%= material.material_job %></td>
        <td><%= material.part_number %></td>
        <td><%= material.part_description %></td>
        <td><%= material.quantity_used %></td>
        <td><%= material.closet %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_tag add_materials_jobs_path, multipart: true do %>
  <%= text_field_tag :part %>
  <%= number_field_tag :quantity_update %>
  <%= submit_tag "add_materials" %>
<% end %>
